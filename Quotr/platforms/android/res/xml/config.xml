<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SpeechRecognizer">
        <param name="android-package" value="com.phonegap.plugins.speech.SpeechRecognizer" />
    </feature>
    <feature name="UniqueDeviceID">
        <param name="android-package" value="hu.dpal.phonegap.plugins.UniqueDeviceID" />
    </feature>
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <allow-intent href="market:*" />
    <name>Quotr</name>
    <description>
        A quote application to return information based on a given quote.
    </description>
    <author email="c12355251@gmail.com">
        Ronan Dillon.
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
</widget>
